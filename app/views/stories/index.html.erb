<p id="notice"><%= notice %></p>

<h1>Stories</h1>

<table>
  <thead>
    <tr>
      <th>Passage</th>
      <th>User</th>
      <th>Story format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.passage&.title %></td>
        <td><%= story.user&.email %>
        <td><%= story.story_format&.name %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Read', formatted_stories_path(id: story.id), target: "_blank" %>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Delete', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', new_story_path %>
